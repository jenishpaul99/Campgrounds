<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 style="text-align:center">Add New Campground</h1>
    <div style="width: 30%; margin:30px auto">
        <form action="/campground" method="post">
            <div class="form-group">
            <input type="text" name='newcamp' class="form-control" placeholder="Camp Name">
            </div>
            <div class="form-group">
            <input type="text" name='newimage' class="form-control" placeholder="Camp Image URL">
            </div>
            <div class="form-group">
                <input type="text" name='price' class="form-control" placeholder="Price/Night">
            </div>
            <div class="form-group">
            <input type="text" name='desc' class="form-control" placeholder="Camp Description">
            </div>              
            <div class="form-group">
            <button class="btn btn-lg btn-primary btn-block">Add Campground</button>
            </div>

        </form>
        <a href="/campground">Go Back</a>
    </div>
</div>

