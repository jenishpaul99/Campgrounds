<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 style="text-align: center;">Edit Comment</h1>
    <div style="width: 30%; margin: 30px auto;">
        <form
            action="/campground/<%= campid %>/comments/<%= comment._id %>?_method=PUT"
            method="post"
        >
            <div class="form-group">
                <input
                    type="text"
                    name="comment"
                    class="form-control"
                    placeholder="Comment"
                    value="<%= comment.text %>"
                />
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">
                    Edit
                </button>
            </div>
        </form>
        <a href="/campground">Go Back</a>
    </div>
</div>

