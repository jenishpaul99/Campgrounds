<%- include("../partials/header.ejs") %>

<div class="container">
    <h1 style="text-align: center;">Add a Comment to <%= camp.name %></h1>
    <div style="width: 30%; margin: 30px auto;">
        <form action="/campground/<%= camp._id %>/comments" method="post">
            <div class="form-group">
                <input
                    type="text"
                    name="comments[text]"
                    class="form-control"
                    placeholder="Comment"
                />
            </div>

            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">
                    Add Comment
                </button>
            </div>
        </form>
        <a href="/campground">Go Back</a>
    </div>
</div>

